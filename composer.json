{
    "name": "phlib/jobqueue",
    "type": "library",
    "description": "Job Queue implementation.",
    "keywords": ["job", "task", "queue", "beanstalk"],
    "license": "LGPL-3.0",
    "authors": [
        {
            "name": "Luke Richards"
        },
        {
            "name": "Phlib Team & Contributors",
            "homepage": "https://github.com/phlib/jobqueue/contributors"
        }
    ],
    "require": {
        "php": "^7.4",
        "ext-json": "*",

        "phlib/beanstalk": "^1.0.0",
        "phlib/db": "^2",
        "phlib/console-configuration": "^1.0",
        "phlib/console-process": "^1.0.0",

        "psr/log": "^1",
        "aws/aws-sdk-php": "^3.61"
    },
    "require-dev": {
        "symplify/easy-coding-standard": "^11",
        "phpspec/prophecy": "^1",
        "phpspec/prophecy-phpunit": "^2",
        "phpunit/phpunit": "^9"
    },
    "autoload": {
        "psr-4": {
            "Phlib\\JobQueue\\": "src/"
        }
    },
    "autoload-dev": {
       "psr-4": {
           "Phlib\\JobQueue\\Tests\\": "tests/"
       }
    },
    "bin": ["bin/jobqueue"],
    "scripts": {
        "cs-check": "vendor/bin/ecs",
        "cs-fix": "vendor/bin/ecs --fix"
    }
}
